                            <label>BchNo.auto. GRAcAsst</label>
                            <input name="default" type="checkbox" placeholder="" style="margin-left: 50px;">
                        </div>
    
                     
                        <div class="title">Physical Inventory </div>
                            
                        <div class="input-field">
                            <label>Stock type</label>
                            <input name="Stock" type="text" placeholder="" style="margin-right: 200px;">

                            <label>Alternative Unit </label>
                            <input name="unit" type="checkbox" placeholder="" style="margin: 0px 50px;">
                          
                            <label>Batch in Background </label>
                            <input name="Batch" type="checkbox" placeholder="" style="margin-left: 60px;">
                            
                        </div>

                        <div class="input-field">
                            <label>Change Document</label>
                            <input name="change" type="checkbox" placeholder="" style="margin-right: 200px;">

                            <label>Adj. Book Inventory </label>
                            <input name="Book" type="text" placeholder="" style="margin: 0px 40px;">

                            <label>Reason f. difference</label>
                            <input name="Reason" type="text" placeholder="" style="margin-left: 40px;">
                        </div>

                        <div class="title">Reservations</div>

                        <div class="input-field">
                           
                            <label>Movement Allowed</label>
                            <input name="Movement" type="checkbox" placeholder="" style="margin-right: 200px;">

                            <label>Days mvt. allowed </label>
                            <input name="Days" type="text" placeholder="" style="margin: 0px 40px;">

                            <label>Retention period</label>
                            <input name="Retention" type="text" placeholder="" style="margin-left: 40px;">
                        </div>

                        <div class="title">Negative stocks</div>
    
                        <div class="input-field">
                            <label>Vendor consig.gds</label>
                            <input name="consignment" type="checkbox" placeholder="" style="margin-right: 200px;">
                          
                            <label>Customer Consig.</label>
                            <input name="Consignment" type="checkbox" placeholder="" style="margin: 0px 60px;">

                            <label>RTP stocks </label>
                            <input name="RTP" type="checkbox" placeholder="" style="margin-left: 50px;">
                        </div>

                        <div class="input-field">
                        
                            <label>Return.pack. at.cust. </label>
