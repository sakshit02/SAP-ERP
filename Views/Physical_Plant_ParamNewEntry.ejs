                            <label>Stocks of mat.w.vendor</label>
                            <input name="mat" type="checkbox" placeholder="" style="margin: 0px 60px;">
                          
                            <label>Sales.order stock </label>
                            <input name="Sales" type="checkbox" placeholder="" style="margin-left: 65px;">
                        </div>

                        <div class="input-field">
                            <label>Project stock</label>
