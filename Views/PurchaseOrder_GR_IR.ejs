<body>

  
  <%-include ('partials/sidepanel'); %>
  <h1>Maintain Table T162: Fields for field Selection Group</h1>
  <div class="form" style="width: 600px;">
    <div class="input-field">
        <label>Field Selection Key</label>
        <input style="margin-left: 85px;" type="text" name="key" />
        <input type="text" name="key" />
        
      </div>
      <div class="input-field">
        <label>Selection Group</label>
        <input type="text" name="Selection" >
      </div>
</div>

  <div id="body">
      <table class="datatable">
          <thead>
              <tr>
                  <th>Field Label</th>
                  <th>Reqd.entry<input id="check_all1" type="checkbox" class="Reqd.entry-checkbox"></th>
                  <th>Opt.entry<input id="check_all2" type="checkbox" class="Opt.entry-checkbox"></th>
                  <th>Display<input id="check_all3" type="checkbox" class="Display-checkbox"></th>
              </tr>
          </thead>
          <tbody>
              <tr class="odd_col">
                  <td>Valuation type</td>
                  <td><input type="checkbox" name="row-check" value="1" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="1" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="1" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>Tax code</td>
                  <td><input type="checkbox" name="row-check" value="2" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="2" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="2" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>"Delivery Completed" indicator</td>
                  <td><input type="checkbox" name="row-check" value="3" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="3" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="3" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>Quality inspection</td>
                  <td><input type="checkbox" name="row-check" value="4" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="4" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="4" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>Underdelivery tolerance</td>
                  <td><input type="checkbox" name="row-check" value="5" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="5" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="5" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>Overdelivery tolerance</td>
                  <td><input type="checkbox" name="row-check" value="6" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="6" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="6" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>Unlimited overdelivery</td>
                  <td><input type="checkbox" name="row-check" value="7" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="7" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="7" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>Final invoice indicator</td>
                  <td><input type="checkbox" name="row-check" value="8" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="8" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="8" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>GR-based invoice verification</td>
                  <td><input type="checkbox" name="row-check" value="9" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="9" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="9" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>GR-based Settlement</td>
                  <td><input type="checkbox" name="row-check" value="10" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="10" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="10" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>GR/IR control</td>
                  <td><input type="checkbox" name="row-check" value="11" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="11" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="11" class="Display-checkbox"></td>
              </tr>
              <tr class="even_col">
                  <td>"Delivery Completed" indicator</td>
                  <td><input type="checkbox" name="row-check" value="12" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="12" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="12" class="Display-checkbox"></td>
              </tr>
              <tr class="odd_col">
                  <td>Ind.: partial deliv. (st.tfr)</td>
                  <td><input type="checkbox" name="row-check" value="13" class="Reqd.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="13" class="Opt.entry-checkbox"></td>
                  <td><input type="checkbox" name="row-check" value="13" class="Display-checkbox"></td>
              </tr>
          </tbody>
      </table>
  </div>
</div>


<script>
  $(function() {
      // If check_all1 (Reqd.entry-checkbox) checked then check all checkboxes in the Create column
      $("#check_all1").on("click", function () {
          if ($(this).prop("checked")) {
              $(".Reqd.entry-checkbox").prop("checked", true);
          } else {
              $(".Reqd.entry-checkbox").prop("checked", false);
          }
      });

      // If check_all2 (Opt.entry-checkbox) checked then check all checkboxes in the Change column
      $("#check_all2").on("click", function () {
          if ($(this).prop("checked")) {
              $(".Opt.entry-checkbox").prop("checked", true);
          } else {
              $(".Opt.entry-checkbox").prop("checked", false);
          }
      });

      // If check_all3 (Display-checkbox) checked then check all checkboxes in the Delete column
      $("#check_all3").on("click", function () {
          if ($(this).prop("checked")) {
              $(".Display-checkbox").prop("checked", true);
          } else {
              $(".Display-checkbox").prop("checked", false);
          }
      });


      // Check each table row checkbox
      $("input:checkbox[name='row-check']").on("change", function () {
          var total_check_boxes = $("input:checkbox[name='row-check']").length;
          var total_checked_boxes = $("input:checkbox[name='row-check']:checked").length;

          // If all checked manually then check check_all checkbox
          if (total_check_boxes === total_checked_boxes) {
              $("#check_all").prop("checked", true);
          } else {
              $("#check_all").prop("checked", false);
          }
      });
  });
</script>
</body>
