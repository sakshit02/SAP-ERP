     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   

     <style>


.container {
    width: 1000px;
    margin:0px;

}

header {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.form {
    width: 1000px;
    background-color: #fff;
}

.input-field {
    display: flex;
}

label {
    font-weight: bold;
    flex: 2;
    
}

input {
    flex: 4; 
    border: 1px solid #ccc;
    border-radius: 4px;
}

button {
    margin-top: 10px; 
    padding: 2px 2px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
}

button:hover {
    background-color: #0056b3;
}

        * {box-sizing: border-box}
        /* Style tab links */
        .tablink {
          background-color: #555;
          color: white;
          float: left;
          border: none;
          outline: none;
          cursor: pointer;
          font-size: 14px;
          margin-right: 5px;
          width: 180px;
          overflow: hidden;
        }
        
        .tablink:hover {
          background-color: #777;
        }
        
        /* Style the tab content (and add height:100% for full page content) */
        .tabcontent {
          color: rgb(251, 247, 247);
          display: none;
          
          height: 100%;
          background-color: rgb(25, 24, 44);
          width: 110%;

        }
        table, th, td {
            border:1px solid black;
        }
        .container1 {
            width: 500px;
            margin: auto;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        table {
            width: auto;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }

        input[type="text"], input[type="checkbox"] {
            width: 100%;
            
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        #addRowButton, #saveDataButton {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-top: 10px;
            cursor: pointer;
            border-radius: 4px;
        }

        #addRowButton:hover, #saveDataButton:hover {
            background-color: #45a049;
        }

        h2 {
            font-size: 24px;
            margin-top: 20px;
        }
        
        .tabcontent {
            color: rgb(251, 247, 247);
            display: flex;
            flex-wrap: wrap; 
            gap: 20px; 
            height: 100%;
            background-color: rgb(25, 24, 44);
            width: 50%;
        }

        .input-field {
            flex: 1; 
            margin-bottom: 15px;
        }


        .flex-container {
        display: flex;
        justify-content: space-between;
    }

    .table-container {
        width: 300px; 
    }

    .content-box {
        flex: 1; 
        margin-left: 20px; 
    }

        </style> 
   </head>
<body>
  <%-include ('partials/sidepanel'); %>
    <div class="container">
        <header> Sales Item Data   &nbsp;&nbsp;   <button type="submit">Submit</button>
        </header>
    
        <form action="" method="POST">
            <div class="form first">
                <div class="details ID">
                    <div class="fields">
                        <div class="input-field">
                            <label>Sales Document Item</label>
                            <input  name="vid" type="text"  style="margin-right: 560px;max-width: 320px;">
                        </div>
                        <div class="input-field">
                            <label>Item Category</label>
                            <input  name="vid" type="text"  style="margin-right: 560px;max-width: 320px;">
                        </div>
                        <div class="input-field">
                            <label>Material</label>
                            <input name="loc_code" type="text" placeholder="" style="margin-right: 560px;max-width: 320px;" >
                        </div>
                    </div>
                    
                </div> 
            </div>
        </form>
        <button class="tablink" onclick="openPage('SalesA', this, 'red')">Sales A</button>
        <button class="tablink" onclick="openPage('SalesB', this, 'green')">Sales B</button>
        <button class="tablink" onclick="openPage('Shipping', this, 'blue')">Shipping</button>
        <button class="tablink" onclick="openPage('BillingDocument', this, 'orange')">Billing Document</button>
        <button class="tablink" onclick="openPage('Conditions', this, 'olive')">Conditions</button>
        <button class="tablink" onclick="openPage('AccountAssignment', this, 'maroon')">Account Assignment</button>
        <button class="tablink" onclick="openPage('ScheduleLines', this, 'purple')">Schedule Lines</button>
        <button class="tablink" onclick="openPage('Partner', this, 'olive')">Partner</button>
        <button class="tablink" onclick="openPage('Texts', this, 'olive')">Texts</button>
        <button class="tablink" onclick="openPage('Status', this, 'olive')">Status</button>
      </div>
    </form>

    <!-- Containers for tab content -->
    <div id="SalesA" class="tabcontent"></div>
    <div id="SalesB" class="tabcontent"></div>
    <div id="Shipping" class="tabcontent"></div>
    <div id="BillingDocument" class="tabcontent"></div>
    <div id="Conditions" class="tabcontent"></div>
    <div id="AccountAssignment" class="tabcontent"></div>
    <div id="ScheduleLines" class="tabcontent"></div>
    <div id="Partner" class="tabcontent"></div>
    <div id="Texts" class="tabcontent"></div>
    <div id="Status" class="tabcontent"></div>

  </div>

  <script>
    //  JSON data for each tab
    var salesAData = {
        "Order Quantity": "",
        "First Delivery Date": "",
        "Delivery Time": "",
        "Net Value": "",
        "Pricing Date": "",
        "Material Entered": "",
        "EAN/UPC": "",
        "Engineering Change": "",
        "Usage": "",
        "Reason for Rejection": "",

    };

    var salesBData = {
        "ProdHierarchy": "",
  "MaterialGroup": "",
  "Division": "",
  "CustomerGroup": "",
  "PriceListType": "" ,
  "MatPriceGrp": "", 
  "CustPriceGroup": "", 
  "SalesDistrict": "" ,
     
    };

    var shippingData = {
        "ShipToParty": "",
  "Plant": "",
  "ShippingPoint": "",
  "Route": "",
  "NetWeight": "",
  "DeliveryPrior": "",
  "StorLocation": "",
  "PartDlvItem": "",
  "MaxPartDeliv": "",
    };

    var billingDocumentData = {
        "Payer": "", // Add this line
  "Incoterms": "", // Add this line
  "IncoLocation1": "", // Add this line
  "IncoLocation2": "", // Add this line
  "PaymentTerms": "", // Add this line
  "BillingBlock": "", // Add this line
  "InvoicingDates": "", // Add this line
  "BillingDate": "", // Add this line
  "AcctAssmtGrpMa": "", // Add this line
  "PaymentMethod": "", // Add this line
  "PostingPeriod": "" ,
    };

    var conditionsData = {
      "Inactive/Aative": "",
      "Condition Type": "",
      "Description": "",
      "Amount": "",
      "Currency": "",
      "Per": "",
      "Unit of Measure": "",
      "Condition value": "",
      "currency": "",
      

    };

    var accountAssignmentData = {
        "Business Area": "",
        "Profit Center": "",

    };

    var scheduleLinesData = [
    {
        "Period": "",
        "Delivery Date": "",
        "Sales Unit": "",
        "Delivery Block": "",
        "Schedule Line Category": "",
        "Purchase Requistion": "",
        "Requisition Item": "",
    },
    
];

    var partnerData = {
      "Partner Function": "",
      "Partner": "",
      "Name": "",
      "Street": "",
      "Postal Code": "",
      "City": "",
    };

    var textsData = {
      "Text Type": "",
      
    };

    var statusData = {
      "Overall Status": "",
      "Delivery Status": "",
     
    };

    
    function populateSalesA() {
      var content = "<h2>Sales A</h2>";
      for (var key in salesAData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + salesAData[key] + "' ></div>";
      }
      document.getElementById("SalesA").innerHTML = content;
    }

    
    function populateSalesB() {
      var content = "<h2>Sales B</h2>";
      for (var key in salesBData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + salesBData[key] + "' ></div>";
      }
      document.getElementById("SalesB").innerHTML = content;
    }

   
    function populateShipping() {
      var content = "<h2>Shipping</h2>";
      for (var key in shippingData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + shippingData[key] + "' ></div>";
      }
      document.getElementById("Shipping").innerHTML = content;
    }

   
    function populateBillingDocument() {
      var content = "<h2>Billing Document</h2>";
      for (var key in billingDocumentData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + billingDocumentData[key] + "' ></div>";
      }
      document.getElementById("BillingDocument").innerHTML = content;
    }

    
    function populateConditions() {
    var content = "<h2>Conditions</h2>";

    // Add labels and inputs above the table
    content += "<div class='input-field'><label>Quantity</label><input type='text'></div>";
    content += "<div class='input-field'><label>Net</label><input type='text'></div>";
    content += "<div class='input-field'><label>Tax</label><input type='text'></div>";

    content += "<table>";
    content += "<tr><th>Inactive/Aative</th><th>Condition Type</th><th>Description</th><th>Amount</th><th>Currency</th><th>Per</th><th>Unit of Measure</th><th>Condition value</th><th>Currency</th></tr>";

    // Sample data for demonstration
    var conditionsData = [
        { "Inactive/Aative": "", "Condition Type": "", "Description": " ", "Amount": "", "Currency": "", "per": "", "Unit of Measure": "", "Condition value": "", "Currency": "" },
        // Add more conditions as needed
    ];

    for (var i = 0; i < conditionsData.length; i++) {
        content += "<tr>";
        content += "<td>" + conditionsData[i]["Inactive/Aative"] + "</td>";
        content += "<td>" + conditionsData[i]["Condition Type"] + "</td>";
        content += "<td>" + conditionsData[i]["Description"] + "</td>";
        content += "<td>" + conditionsData[i]["Amount"] + "</td>";
        content += "<td>" + conditionsData[i]["Currency"] + "</td>";
        content += "<td>" + conditionsData[i]["per"] + "</td>";
        content += "<td>" + conditionsData[i]["Unit of Measure"] + "</td>";
        content += "<td>" + conditionsData[i]["Condition value"] + "</td>";
        content += "<td>" + conditionsData[i]["Currency"] + "</td>";

        content += "</tr>";
    }

    content += "</table>";
    document.getElementById("Conditions").innerHTML = content;
}

   
    function populateAccountAssignment() {
      var content = "<h2>Account Assignment</h2>";
      for (var key in accountAssignmentData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + accountAssignmentData[key] + "' ></div>";
      }
      document.getElementById("AccountAssignment").innerHTML = content;
    }

  
    function populateScheduleLines() {
    var content = "<h2>Schedule Lines</h2>";
    content += "<table>";
    content += "<tr><th>Period</th><th>Delivery Date</th><th>Sales Unit</th><th>Delivery Block</th><th>Schedule Line Category</th><th>Purchase Requisition</th><th>Requisition Item</th></tr>";

    for (var i = 0; i < scheduleLinesData.length; i++) {
        content += "<tr>";
        content += "<td>" + scheduleLinesData[i]["Period"] + "</td>";
        content += "<td>" + scheduleLinesData[i]["Delivery Date"] + "</td>";
        content += "<td>" + scheduleLinesData[i]["Sales Unit"] + "</td>";

        content += "<td><select>";
        content += "<option value='Option 1'>Option 1</option>";
        content += "<option value='Option 2'>Option 2</option>";
        content += "<option value='Option 3'>Option 3</option>";

        content += "</select></td>";

        content += "<td>" + scheduleLinesData[i]["Schedule Line Category"] + "</td>";
        content += "<td>" + scheduleLinesData[i]["Purchase Requisition"] + "</td>";
        content += "<td>" + scheduleLinesData[i]["Requisition Item"] + "</td>";
        content += "</tr>";
    }

    content += "</table>";
    document.getElementById("ScheduleLines").innerHTML = content;
}

    
function populatePartner() {
        var content = "<h2>Partner</h2>";
        content += "<table>";
        content += "<tr><th>Partner Function</th><th>Partner</th><th>Name</th><th>Street</th><th>Postal Code</th><th>City</th></tr>";
        content += "<tr>";
        content += "<td><select>";
        content += "<option value='Option 1'>Option 1</option>";
        content += "<option value='Option 2'>Option 2</option>";
        content += "<option value='Option 3'>Option 3</option>";
        // Add more options as needed
        content += "</select></td>";
        content += "<td><input type='text' value='" + partnerData["Partner"] + "' ></td>";
        content += "<td><input type='text' value='" + partnerData["Name"] + "' ></td>";
        content += "<td><input type='text' value='" + partnerData["Street"] + "' ></td>";
        content += "<td><input type='text' value='" + partnerData["Postal Code"] + "' ></td>";
        content += "<td><input type='text' value='" + partnerData["City"] + "' ></td>";
        content += "</tr>";
        content += "</table>";
        document.getElementById("Partner").innerHTML = content;
    }


    
    function populateTexts() {
        var content = "<h2>Texts</h2>";
        content += "<div class='flex-container'>"; // Use a flex container to position elements side by side

        // Adjust the width of the table by setting the style attribute
        content += "<div class='table-container' style='width: 300px;'>"; // Adjust the width as needed
        content += "<table>";
        content += "<tr><th>Text Type</th></tr>";
        content += "<tr>";
        content += "<td><input type='text' value='' placeholder='Enter Text Type'></td>";
        content += "</tr>";
        content += "</table>";
        content += "</div>";

        // Add a content box (textarea) for user input on the right side
        content += "<div class='content-box'>";
        content += "<label>Content</label>";
        content += "<textarea rows='4' cols='50'></textarea>";
        content += "</div>";
        content += "</div>";

        document.getElementById("Texts").innerHTML = content;
    }

  
    function populateStatus() {
      var content = "<h2>Status</h2>";
      for (var key in statusData) {
        content += "<div class='input-field'><label>" + key + "</label><input type='text' value='" + statusData[key] + "' ></div>";
      }
      document.getElementById("Status").innerHTML = content;
    }

    
    function openPage(pageName, elmnt, color) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablink");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].style.backgroundColor = "";
      }
      document.getElementById(pageName).style.display = "block";
      elmnt.style.backgroundColor = color;

    
      if (pageName === "SalesA") {
        populateSalesA();
      } else if (pageName === "SalesB") {
        populateSalesB();
      } else if (pageName === "Shipping") {
        populateShipping();
      } else if (pageName === "BillingDocument") {
        populateBillingDocument();
      } else if (pageName === "Conditions") {
        populateConditions();
      } else if (pageName === "AccountAssignment") {
        populateAccountAssignment();
      } else if (pageName === "ScheduleLines") {
        populateScheduleLines();
      } else if (pageName === "Partner") {
        populatePartner();
      } else if (pageName === "Texts") {
        populateTexts();
      } else if (pageName === "Status") {
        populateStatus();
      }
     
    }

   
    document.getElementById("defaultOpen").click();
  </script>

</body>

</html>


