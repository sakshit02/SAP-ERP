<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title> Drop Down Sidebar</title>

    <link rel="stylesheet" href="css/companyform.css">
    <link rel="stylesheet" href="css/table.css">

    <!-- Boxiocns CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <%-include ('partials/sidepanel'); %>

    <div class="container">
        <header> Define Billing Types  &nbsp;&nbsp;   <button type="submit">Submit</button>
        </header>
    
        <form action="/parkingformsent" method="POST">
            <div class="form first">
    
    
                <div class="details ID">
                    <div class="fields">
                        <div class="input-field">
                            
                            <label>Route</label>
                            <input  name="Route" type="text"  style="margin-right: 800px;">
                        </div>

                        <div class="title">Identification </div>
                        <div class="input-field">

                            <label>Description</label>
                            <input name="Description" type="Text" placeholder="" style="margin-right: 10px;">
                            
                            <label style="margin-left: 50px;">Route ID</label>
                            <input name="ID" type="text" placeholder="" style="margin-left: 10px;">
                        </div>

                        <div class="title">Processing</div>

                        <div class="input-field">
                            <label>Mode of Transport</label>
                            <input name="mode" type="text" placeholder="" style="margin: 5px 50px 5px 50px;">

                            <label>Shipping Type</label>
                            <input name="Shipping" type="text" placeholder="" style="margin-right: 100px;">

                            <label>Distance</label>
                            <input name="Distance" type="text" placeholder="" style="margin-right: 30px;">
                        </div>

                        <div class="input-field">
                            <label>ShTypePrelLeg</label>
                            <input name="Shipping" type="text" placeholder="" style="margin: 5px 50px 5px 50px;">

                            <label>ShTypeSublLeg</label>
                            <input name="Shipping" type="text" placeholder="" style="margin-right: 100px;">

                            <label>Rel.transport</label>
                            <input name="Relevence" type="checkbox" placeholder="" style="margin-right: 70px;">
                        </div>

                        <div class="title">Scheduling</div>

                        <div class="input-field">
                            <label>TransitTime</label>
                            <input name="Transit" type="time" placeholder="" style="margin: 5px 50px 5px 50px;">

                            <label>Factory Cal.</label>
                            <input name="Factory" type="text" placeholder="" style="margin-right: 100px;">

                            <label>Trav.dur.</label>
                            <input name="Travel" type="time" placeholder="" style="margin-right: 30px;">
                        </div>

                        <div class="input-field">
                            <label>TransLdTm.</label>
                            <input name="Trans" type="time" placeholder="" style="margin: 5px 50px 5px 50px;">

                            <label>TrLeadTimeHrs</label>
                            <input name="Lead" type="text" placeholder="" style="margin-right: 100px;">

                            <label>Total Weight</label>
                            <input name="Total" type="text" placeholder="" style="margin-right: 30px;">
                        </div> 
                    </div>                                                             
                </div> 
            </div>
        </form>
    </div>

</body>
</html>