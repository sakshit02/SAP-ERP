<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/companyform.css">
    <link rel="stylesheet" href="../public/css/companyform.css">
    <title>Document</title>
    <!-- Boxiocns CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

.container1{

    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

}

input[type="radio"] {
    margin-right: 5px;
}

label {
    display: inline-block;
    margin-bottom: 10px;
}

.fixed-buttons1 {
    position: fixed;
    top: 9%;
    left: 1100px;
    transform: translateY(-50%);
    background-color: #4e4caf;
    color: rgb(247, 246, 246);
    border: none;
    text-align: center;
    text-decoration: none;
    font-size: 16px;
    cursor: pointer;
    z-index: 1000; 
}
.fixed-buttons2 {
    position: fixed;
    top: 9%;
    left: 1200px;
    transform: translateY(-50%);
    background-color: #4e4caf;
    color: rgb(243, 241, 241);
    border: none;
    text-align: center;
    text-decoration: none;
    font-size: 16px;
    cursor: pointer;
    z-index: 1000; 
}

    </style>
</head>
<body >

<%-include ('partials/sidepanel'); %>

<h2>Define Text Type</h2>
<button class="fixed-buttons1"  onclick="redirectToPage('change')">Change</button>
<button class="fixed-buttons2" onclick="redirectToPage('textType')">Text Type</button>

<div class="container1">
    <label for="customer">Customer:</label><br>
    <input type="radio" id="option1_1" name="customer" value="option1_1">
    <label for="option1_1">Central texts</label>

    <input type="radio" id="option1_2" name="customer" value="option1_2">
    <label for="option1_2">Contact Person</label>

    <input type="radio" id="option1_3" name="customer" value="option1_3">
    <label for="option1_3">Sales And Distribution</label>
</div>
<div class="container1">
    <label for="infoRec">Info Rec:</label><br>
    <input type="radio" id="option2_1" name="infoRec" value="option2_1">
    <label for="option2_1">Cust./Material</label>
</div>

<div class="container1">
    <label for="pricingConds">Pricing Conds:</label><br>
    <input type="radio" id="option3_1" name="pricingConds" value="option3_1">
    <label for="option3_1">Agreements</label>

    <input type="radio" id="option3_2" name="pricingConds" value="option3_2">
    <label for="option3_2">Conditions</label>
</div>

<div class="container1">
    <label for="salesDocument">Sales Document:</label><br>
    <input type="radio" id="option4_1" name="salesDocument" value="option4_1">
    <label for="option4_1">Header</label>

    <input type="radio" id="option4_2" name="salesDocument" value="option4_2">
    <label for="option4_2">Item</label>
</div>

<div class="container1">
    <label for="delivery">Delivery:</label><br>
    <input type="radio" id="option5_1" name="delivery" value="option5_1">
    <label for="option5_1">Header</label>

    <input type="radio" id="option5_2" name="delivery" value="option5_2">
    <label for="option5_2">Item</label>
</div>

<div class="container1">
    <label for="billingDoc">Billing Doc.:</label><br>
    <input type="radio" id="option6_1" name="billingDoc" value="option6_1">
    <label for="option6_1">Header</label>

    <input type="radio" id="option6_2" name="billingDoc" value="option6_2">
    <label for="option6_2">Item</label>
</div>



<div class="container1">
    <label for="SalesAct">Sales Activity:</label><br>
    <input type="radio" id="option7_1" name="SalesAct" value="option7_1">
    <label for="option7_1">General Texts</label>

</div>


<div class="container1">
    <label for="Shipment">Shipment:</label><br>
    <input type="radio" id="option8_1" name="Shipment" value="option8_1">
    <label for="option8_1">Header</label>


</div>


<div class="container1">
    <label for="financial">financial Document:</label><br>
    <input type="radio" id="option9_1" name="financial" value="option9_1">
    <label for="option9_1">General Texts</label>


</div>



<div class="container1">
    <label for="legalcontrol">Legal Control:</label><br>
    <input type="radio" id="option10_1" name="legalcontrol" value="option10_1">
    <label for="option10_1">General Texts</label>

    <input type="radio" id="option10_2" name="legalcontrol" value="option10_2">
    <label for="option10_2">Item</label>
</div>



<div class="container1">
    <label for="agencyBusiness">Agency business:</label><br>
    <input type="radio" id="option11_1" name="agencyBusiness" value="option11_1">
    <label for="option11_1">Header</label>

    <input type="radio" id="option11_2" name="agencyBusiness" value="option11_2">
    <label for="option11_2">Item</label>
</div>



<div class="container1">
    <label for="tradingContract">Trading Contract:</label><br>
    <input type="radio" id="option12_1" name="tradingContract" value="option12_1">
    <label for="option12_1">Header</label>

    <input type="radio" id="option12_2" name="tradingContract" value="option12_2">
    <label for="option12_2">Item</label>
</div>
<script>
    function redirectToPage(buttonType) {
        var selectedOption = document.querySelector('input[name^="customer"]:checked, input[name^="infoRec"]:checked, input[name^="pricingConds"]:checked, input[name^="salesDocument"]:checked, input[name^="delivery"]:checked, input[name^="billingDoc"]:checked, input[name^="SalesAct"]:checked, input[name^="Shipment"]:checked, input[name^="financial"]:checked, input[name^="legalcontrol"]:checked, input[name^="agencyBusiness"]:checked, input[name^="tradingContract"]:checked');

        if (selectedOption) {
            var optionValue = selectedOption.value;
            var url = '';

            if (buttonType === 'change') {
                url = getChangePageUrl(optionValue);
            } else if (buttonType === 'textType') {
                url = getTextTypePageUrl(optionValue);
            }

            window.location.href = url;
        } else {
            alert('Please select a customer option before clicking the button.');
        }
    }

    function getChangePageUrl(optionValue) {
        
        switch (optionValue) {
            // Customer
            case 'option1_1':
                return '/SD_Text_TextType_Cust_Change1'; 
            case 'option1_2':
                return '/SD_Text_TextType_Cust_Change2'; 
            case 'option1_3':
                return '/SD_Text_TextType_Cust_Change3'; 
            // info rec
            case 'option2_1':
              return '/SD_Text_TextType_Info_Change1'; 

            //   pricing condition

            case 'option3_1':
                return '/SD_Text_TextType_Pricing_Change1'; 
            case 'option3_2':
                return '/SD_Text_TextType_Pricing_Change2'; 
// sales document
             case 'option4_1':
                return '/SD_Text_TextType_SalesDoc_Change1'; 
            case 'option4_2':
                return '/SD_Text_TextType_SalesDoc_Change2'; 
// delivery
            case 'option5_1':
                return '/SD_Text_TextType_Delivery_Change1'; 
            case 'option5_2':
                return '/SD_Text_TextType_Delivery_Change2'; 
// billing document
            case 'option6_1':
                return '/SD_Text_TextType_billingDoc_Change1'; 
            case 'option6_2':
                return '/SD_Text_TextType_billingDoc_Change2'; 

// sales activity
            case 'option7_1':
                return '/SD_Text_TextType_SalesAct_Change1'; 
// shipment
            case 'option8_1':
                return '/SD_Text_TextType_Shipment_Change1'; 
// financial document
            case 'option9_1':
                return '/SD_Text_TextType_Financial_Change1'; 
// legal control
            case 'option10_1':
                return '/SD_Text_TextType_Legal_Change1'; 

// agency business
            case 'option11_1':
                return '/SD_Text_TextType_Agency_Change1'; 
            case 'option11_2':
                return '/SD_Text_TextType_Agency_Change1'; 
// trading contract
            case 'option12_1':
                return '/SD_Text_TextType_Trading_Change1'; 
            case 'option12_2':
                return '/SD_Text_TextType_Trading_Change2'; 


            default:
                return ''; 
        }
    }

    function getTextTypePageUrl(optionValue) {
        
        switch (optionValue) {

// Customer
             case 'option1_1':
                return '/SD_Text_TextType_Cust_TextType1'; 
            case 'option1_2':
                return '/SD_Text_TextType_Cust_TextType2'; 
            case 'option1_3':
                return '/SD_Text_TextType_Cust_TextType3'; 
// info rec
            case 'option2_1':
              return '/SD_Text_TextType_Info_TextType1'; 

//   pricing condition

            case 'option3_1':
                return '/SD_Text_TextType_Pricing_TextType1'; 
            case 'option3_2':
                return '/SD_Text_TextType_Pricing_TextType2'; 
// sales document
             case 'option4_1':
                return '/SD_Text_TextType_SalesDoc_TextType1'; 
            case 'option4_2':
                return '/SD_Text_TextType_SalesDoc_TextType2'; 
// delivery
            case 'option5_1':
                return '/SD_Text_TextType_Delivery_TextType1'; 
            case 'option5_2':
                return '/SD_Text_TextType_Delivery_TextType2'; 
// billing document
            case 'option6_1':
                return '/SD_Text_TextType_billingDoc_TextType1'; 
            case 'option6_2':
                return '/SD_Text_TextType_billingDoc_TextType2'; 

// sales activity
            case 'option7_1':
                return '/SD_Text_TextType_SalesAct_TextType1'; 
// shipment
            case 'option8_1':
                return '/SD_Text_TextType_Shipment_TextType1'; 
// financial document
            case 'option9_1':
                return '/SD_Text_TextType_Financial_TextType1'; 
// legal control
            case 'option10_1':
                return '/SD_Text_TextType_Legal_TextType1'; 

// agency business
            case 'option11_1':
                return '/SD_Text_TextType_Agency_TextType1'; 
            case 'option11_2':
                return '/SD_Text_TextType_Agency_TextType2'; 
// trading contract
            case 'option12_1':
                return '/SD_Text_TextType_Trading_TextType1'; 
            case 'option12_2':
                return '/SD_Text_TextType_Trading_TextType2'; 
  
            default:
                return ''; 
        }
    }

    // Deselect radio buttons in other containers when one is selected
    document.querySelectorAll('input[type="radio"]').forEach(function (radio) {
        radio.addEventListener('change', function () {
            document.querySelectorAll('input[type="radio"]').forEach(function (otherRadio) {
                if (otherRadio !== radio) {
                    otherRadio.checked = false;
                }
            });
        });
    });
</script>

</body>
</html>
